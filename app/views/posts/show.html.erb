<div class="page-header">
  
  
  <h1>Show Post</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @post.title %></dd>

  <dt>Description:</dt>
  <dd><%= @post.description %></dd>

  <dt>Image:</dt>

  <dd>
  <%= image_tag(url_for(@post.image), :size => "200x150")%>
  </dd>
</dl>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to 'Delete', post_path(@post), method: :delete,class: "text-denger", data: { confirm: "Are You Sure? you want to delete"} %>
<%= link_to "Home", root_path %>



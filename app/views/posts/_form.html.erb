<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="error-explanation">
      <h2><%= pluralize(post.errors.count, "error") %>prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_message.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>
  <br/>

  <div class="field">
    <% if @post.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', post, method: :delete,class: "text-denger", data: { confirm: "Are You Sure? you want to delete"} %>
      </div>
    <% end %>
    <%= f.submit "Create Post", class: "btn btn-success" %>


    <% if @post.persisted? %>
      <%= link_to "Cancel", post, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", posts_path, class: "btn btn-link" %>
    <% end %>
  </div>     
<% end %>
<h1>Edit Comment</h1>
<%= form_for ([@post, @comment]) do |f| %>
 <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control' %>
  </div> 
  <div> 
  <%= f.submit "Submit", class: "btn btn-success" %>
</div>
<% end %>  



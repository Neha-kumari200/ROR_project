<%= form_for ([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>  
  <%= f.submit "Create Comment", class: "btn btn-success" %>
<% end %>  


